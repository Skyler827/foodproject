{
    "compilerOptions": {
        "outDir": "./out",
        "allowJs": true,
        "target":"es2017",
        "module": "commonjs",
        "checkJs": true,
        "noImplicitReturns": true,
        "types": ["node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include":[
        "./src/**/*"
    ]
}